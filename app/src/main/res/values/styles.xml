<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="card_color">@color/cardColor</item>
        <item name="text_color_primary">@color/textColorPrimary</item>
        <item name="text_color_secondary">@color/textColorSecondary</item>
    </style>

    <!-- Dark theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="card_color">@color/cardColor</item>
        <item name="text_color_primary">@color/textColorPrimary</item>
        <item name="text_color_secondary">@color/textColorSecondary</item>
    </style>

    <!--     Misc -->
    <style name="ExpenseryPrimaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="elevation">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="cardBackgroundColor">?attr/card_color</item>
    </style>

    <style name="MyPrimaryText">
        <item name="android:textColor">?attr/text_color_primary</item>
    </style>

    <style name="MySecondaryText">
        <item name="android:textColor">?attr/text_color_secondary</item>
    </style>

</resources>