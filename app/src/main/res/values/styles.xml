<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!--     Misc -->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="elevation">16dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="CustomHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="CustomPrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="CustomSecondaryText">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="CustomSecondaryText2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_250</item>
    </style>

    <style name="CustomSecondaryText3">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>